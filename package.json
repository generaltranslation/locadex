{
  "name": "locadex-action",
  "version": "0.0.1",
  "description": "GitHub Action for Locadex i18n automation",
  "main": "dist/action.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:clean": "rm -rf dist && npm run build",
    "package": "npm run build:clean && ncc build dist/action.js -o dist --source-map --license licenses.txt",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "locadex": "^0.0.2-alpha.7"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@types/node": "^20.0.0",
    "@vercel/ncc": "^0.38.1",
    "@vitest/ui": "^3.2.3",
    "typescript": "^5.7.3",
    "vitest": "^3.2.3",
    "@changesets/changelog-github": "^0.5.1",
    "@eslint/js": "^9.17.0",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vitest/coverage-v8": "^3.1.4",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "globals": "^15.14.0",
    "prettier": "^3.5.3",
    "turbo": "^2.5.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/generaltranslation/gt.git"
  },
  "author": "General Translation, Inc.",
  "license": "FSL-1.1-ALv2"
}
